@font-face {
	font-family: "{{ name }}";
	font-display: block;
	src: {{{ fontSrc }}};
}

.industricon[class*='industricon-'] {
	font: normal normal normal 16px/1 {{ name }};
	display: inline-block;
	text-decoration: none;
	text-rendering: auto;
	text-align: center;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	user-select: none;
	-webkit-user-select: none;
	-ms-user-select: none;
}

/*---------------------
 *  Modifiers
 *-------------------*/

@keyframes industricon-spin {
	100% {
		transform:rotate(360deg);
	}
}

.industricon-sync.industricon-modifier-spin,
.industricon-loading.industricon-modifier-spin,
.industricon-gear.industricon-modifier-spin {
	/* Use steps to throttle FPS to reduce CPU usage */
	animation: industricon-spin 1.5s steps(30) infinite;
}

.industricon-modifier-disabled {
	opacity: 0.5;
}

.industricon-modifier-hidden {
	opacity: 0;
}

/* custom speed & easing for loading icon */
.industricon-loading {
	animation-duration: 1s !important;
	animation-timing-function: cubic-bezier(0.53, 0.21, 0.29, 0.67) !important;
}

/*---------------------
 *  Icons
 *-------------------*/

{{# each codepoints }}
.{{ ../prefix }}-{{ @key }}:before { content: "\\{{ codepoint this }}" }
{{/ each }}